{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Openocd下载",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "./debug/stlink-dap.cfg",
                "-f",
                "./debug/stm32f1x.cfg",
                "-c",
                "program ./build/Project.hex verify reset exit"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Build目录清除",
            "type": "shell",
            "command": "rm -rf ./build ./.cache ./compile_commands.json && mkdir build",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        //cmake构建项目并将clangd需要的检查目录compile_commands.json移动至项目根目录
        {
            "label": "Cmake构建",
            "type": "shell",
            "command": "cd build && cmake .. && mv compile_commands.json ..",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Make编译",
            "type": "shell",
            "command": "cd build && make -j 8",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
        
    ]
}
